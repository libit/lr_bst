<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:id="@+id/btn_all_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:padding="0dp"
            android:text="全部评价\n0"/>
        <LinearLayout
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>
        <Button
            android:id="@+id/btn_good_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:padding="0dp"
            android:text="好评\n0"/>
        <LinearLayout
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>
        <Button
            android:id="@+id/btn_mid_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:padding="0dp"
            android:text="中评\n0"/>
        <LinearLayout
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>
        <Button
            android:id="@+id/btn_bad_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:padding="0dp"
            android:text="差评\n0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line"/>
    <com.external.xlistview.XListView
        android:id="@+id/xlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_bg_primary_normal"
        android:divider="@color/line"
        android:dividerHeight="0.5dp"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="false"
        android:scrollbars="none">
    </com.external.xlistview.XListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂无评价"
        android:textSize="20sp"
        android:visibility="gone"/>
</LinearLayout>
